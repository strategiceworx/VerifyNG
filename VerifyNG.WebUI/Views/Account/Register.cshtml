<div class="row vertical-offset-100">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row-fluid user-row">
                    <img src="~/Images/logo_benue.png" class="img-responsive" alt="Conxole Admin" />
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Create a new account.</h4>
                    <hr />
                    <label class="panel-login login_result">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </label>
                    <div class="form-group">
                        @Html.LabelFor(m => m.TelephoneNumber, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.TelephoneNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.TelephoneNumber, "", new { @class = "text-danger" })
                    </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "mm/dd/yyyy" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "mm/dd/yyyy" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Register »">
                        <p>
                            @Html.ActionLink("Register as a new user", "Register")
                        </p>
                }            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
